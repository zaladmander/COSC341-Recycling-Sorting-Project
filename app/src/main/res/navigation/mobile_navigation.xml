<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/nav_identification">

    <fragment
        android:id="@+id/nav_identification"
        android:name="com.example.cosc341_recycling_sorting_project.ui.identification.FragmentIdentification"
        android:label="Identify"
        tools:layout="@layout/fragment_identification" />

    <fragment
        android:id="@+id/nav_pickup"
        android:name="com.example.cosc341_recycling_sorting_project.ui.schedule.FragmentSchedule"
        android:label="Schedule"
        tools:layout="@layout/fragment_schedule">

    <!-- Add an action to go to the details screen -->
    <action
        android:id="@+id/action_schedule_to_scheduleDetails"
        app:destination="@id/nav_schedule_result" />

    </fragment>

    <fragment
        android:id="@+id/nav_schedule_result"
        android:name="com.example.cosc341_recycling_sorting_project.ui.schedule.FragmentScheduleResult"
        android:label="Schedule Results"
        tools:layout="@layout/fragment_schedule_result">

        <action
            android:id="@+id/action_schedule_result_to_full"
            app:destination="@+id/nav_schedule_full"
            />

    </fragment>



    <fragment
        android:id="@+id/nav_schedule_full"
        android:name="com.example.cosc341_recycling_sorting_project.ui.schedule.FragmentScheduleFull"
        android:label="Full Schedule"
        tools:layout="@layout/fragment_schedule_full">

        <action
            android:id="@+id/action_schedule_full_to_pickup"
            app:destination="@id/nav_pickup" />
    </fragment>

    <fragment
        android:id="@+id/nav_stats"
        android:name="com.example.cosc341_recycling_sorting_project.ui.stats.FragmentStats"
        android:label="Stats"
        tools:layout="@layout/fragment_stats" />

    <fragment
        android:id="@+id/nav_quiz"
        android:name="com.example.cosc341_recycling_sorting_project.ui.quiz.FragmentQuiz"
        android:label="Quiz"
        tools:layout="@layout/fragment_quiz" />

    <fragment
        android:id="@+id/nav_depots"
        android:name="com.example.cosc341_recycling_sorting_project.ui.depots.FragmentDepots"
        android:label="Depots"
        tools:layout="@layout/fragment_depots" />

</navigation>