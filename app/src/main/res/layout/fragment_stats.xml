<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.schedule.FragmentSchedule">

    <!-- Greeting: "Hello, User!" -->
    <TextView
        android:id="@+id/text_greeting"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Hello, User!"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:textAlignment="center"
        android:layout_marginTop="64dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Subtitle: small explanation if you want -->
    <TextView
        android:id="@+id/text_subtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Here’s your recycling progress this week:"
        android:textSize="20sp"
        android:textColor="@android:color/darker_gray"
        android:textAlignment="center"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/text_greeting"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Card-like container for the streak -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_streak"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="12dp"
        app:layout_constraintTop_toBottomOf="@id/text_subtitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/text_streak_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3-Week Recycling Streak"
                android:textStyle="bold"
                android:textSize="24sp"
                app:layout_constraintTop_toTopOf="@id/badge"
                app:layout_constraintBottom_toBottomOf="@id/badge"
                app:layout_constraintStart_toEndOf="@id/badge"
                android:padding="4dp"/>

            <TextView
                android:id="@+id/text_streak_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="1 week to next tier"
                android:textSize="20sp"
                app:layout_constraintTop_toBottomOf="@id/text_streak_title"
                app:layout_constraintBottom_toTopOf="@id/layout_streak_bar"
                app:layout_constraintStart_toStartOf="parent"
                android:padding="4dp"/>

            <ImageView
                android:id="@+id/badge"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/bronze_badge"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/text_streak_title"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/layout_streak_bar"
                />

            <!-- Simple placeholder for a visual streak bar -->
            <LinearLayout
                android:id="@+id/layout_streak_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <!-- 3 little “week” blocks -->
                <View
                    android:layout_width="0dp"
                    android:layout_height="12dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="4dp"
                    android:background="@android:color/holo_green_dark" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="12dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="4dp"
                    android:background="@android:color/holo_green_dark" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="12dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="4dp"
                    android:background="@android:color/holo_green_dark" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <!-- Buttons row: Weekly Summary + Community -->
    <LinearLayout
        android:id="@+id/layout_buttons"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/card_streak"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btn_weekly_summary"
        android:layout_width="256dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginTop="128dp"
        android:text="Weekly Summary"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card_streak"/>

    <Button
        android:id="@+id/btn_community"
        android:layout_width="256dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_weight="1"
        android:text="Community"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_weekly_summary" />

</androidx.constraintlayout.widget.ConstraintLayout>